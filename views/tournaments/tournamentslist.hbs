      <a  class='waves-effect red darken-1 btn-large'href='/tournaments/{{this._id}}/edit'>Edit tournament</a>
      <a class='waves-effect red darken-1 btn-large' href='/tournaments/{{this._id}}/delete'>Delete tournament</a>
    {{/if}}
  </div>
   
    </div>
  </div>

{{/each}}

</div>
</div>

