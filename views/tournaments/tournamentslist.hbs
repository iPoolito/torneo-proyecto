<div id="list" class="row ">
{{#each tournamentList}}
  <div class="col s12 m6">
    <div class="card grey darken-4">
      <div class="card-image">
    <img
      src='https://miracomosehace.com/wp-content/uploads/2020/08/logo-League-of-Legends.jpg'
      alt=''
    
    />
     <span class="card-title">{{this.game}}||{{this.name}}</span>
    </div>
    <div class="card-content">
          <p>{{this.description}}</p>
        </div>
<div class="card-action tcard">
 <a class='waves-effect red darken-1 btn-large' href='/tournaments/{{this._id}}'>More Details</a>
