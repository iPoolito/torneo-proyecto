<div class='tourDetails'>
  <h1 class='waves-effect grey darken-4 btn-large' > <b>Details  </b> </h1>
  
</div>
<br>

<div class="row ">

  <div class="col s12 m6">

     <div class="card grey darken-4">

       <div class="card-image grey darken-4">
              <img
          src='https://miracomosehace.com/wp-content/uploads/2020/08/logo-League-of-Legends.jpg'
          alt='' />
          <span class="card-title">{{name}}</span>
          {{#if isAdmin}}
            <a  href='/tournaments/{{_id}}/join' class="btn-floating halfway-fab waves-effect waves-light red"> <i class="material-icons">add</i></a>
            {{/if}}
       </div>

     <div class="card-content grey darken-4">
      <p>Game: {{game}} </br>  Description: {{description}}</br>   Number of Teams: {{numberOfTeams}}</p>
        </div>

      <div class="card-action grey darken-4">
       <a class='waves-effect red darken-1 btn-large' href='/tournaments'>Back</a>
      </div>

  
      <div class="card-tabs grey darken-4">
      <ul class="tabs tabs-fixed-width grey darken-4">
        {{#each teams}}
         

          

        <li class="tab grey darken-4"><a  href="#{{this.name}}">Team {{this.name}}</a></li>

            {{/each}}
        </ul>
        </div> 

          <div class="card-content grey darken-4">
            {{#each teams}}
            <div id="{{this.name}}" class="infoIn">
       
              
                 {{#if ../currentUser}}

             <form action='/team/{{this.name}}/{{this._id}}' method='POST' class="form">
             <button class='waves-effect red darken-1 btn-large' type='submit'>
                      Join {{this.name}}
             </button>
            </form>
            {{/if}}


             {{#if ../isAdmin}}
           <form action='/tournaments/{{../_id}}/{{this._id}}/remove' method='POST' class="form">
 
           <button class='waves-effect red darken-1 btn-large' type='submit'>
            Remove {{this.name}}
           </button>

             </form>
     
              {{/if}}



            </div>
              {{/each}}
            
          </div>
      {{!-- Cierra el class del contendor --}}
            
             
    </div>
 
 
  </div>
</div>
