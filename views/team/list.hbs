<div class='topTeamlist'>
  <a href='#teams' class='waves-effect grey darken-4 btn-large'> <b>Teams </b> </a>
</div>
<br />
{{#if errorMessage}}
  <br />
  <h1 style='color: #e3455e'>{{errorMessage}}</h1>
{{/if}}
<div class='cardTeam'>

  <div id='teams' class='row containerT'>

    {{#each teamsList}}
      <div class='col s12 m7grey darken-4'>
        <div class='card grey darken-4 highCard'>

          <div class='card-image grey darken-4'>
            <img src='{{this.imageUrl}}' alt='TeamImage' width='423' height='238' />
            <span class='card-title'>{{this.name}}</span>
          </div>

          <div class='card-content grey darken-4'>
            <h5>Current Tournaments</h5>
            <ul>
              {{#each tournaments}}
                <li><a class='waves-effect red darken-1 btn-small' href='/tournaments/{{this._id}}'> {{this.name}}</a>
                </li>

              {{/each}}
            </ul>
          </div>

          <div class='card-action grey darken-4'>
            <a class='waves-effect red darken-1 btn-large' href='/team/list/{{this._id}}/info'>Details</a>
          </div>

        </div>
      </div>
    {{/each}}
  </div>
</div>