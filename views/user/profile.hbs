<div>
  <h1>Profile</h1>

  {{#if foundUser}}
    <div>
      <p>
        Hi
        {{foundUser.username}}, your account its
        {{foundUser.role}}
      </p>
    </div>
    <div>
      <h2>Your Teams</h2>
      {{#each foundUser.team}}
        <div>
          <h3>{{this.name}}</h3>
          <p>{{this.description}} </p>
          {{#if ../isAdmin}}
          <a href='/user/team/{{this._id}}/edit'>Edit Team</a>
          <a href='/user/team/{{this._id}}'>Managment Team</a>
          <a href='/user/team/{{this._id}}/delete'>Delete Team</a>
          {{/if}}
        </div>
      {{/each}}
    </div>
  {{else}}
    <p>Aún no has iniciado sesión</p>
  {{/if}}
</div>